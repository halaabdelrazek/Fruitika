
@model PaginatedList<ecommerceProjectMVC.Models.Product>
@*@model List<Product>*@
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Fruitikha";
}

	<div class="breadcrumb-section breadcrumb-bg" style="height:60px">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Fresh and Organic</p>
						<h1>Product</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<!-- products -->
	<div class="product-section mt-150 mb-150">
		<div class="container">

			<div class="row">
                <div class="col-md-12">
                    <div class="product-filters">
                        <ul>
							<li class="active" data-filter="*"><a asp-action="index" asp-controller="shop" style="color:black;">All</a></li>
							@foreach (var category in ViewBag.categories)
							{
								
                            <li data-filter="*"  style="border: 1px solid #051922"><a asp-action="index" asp-controller="shop" style="color:black" asp-route-id="@category.CategoryId"> @category.Name</a></li>
							}
                            
                        </ul>
                    </div>
                </div>
            </div>

			<div id="cart" class="row product-lists">
				@foreach (var product in Model)
			   {
				<div class="col-lg-4 col-md-6 text-center strawberry">
					<div class="single-product-item">
						<div class="product-image">
							<a asp-action="details" asp-controller="shop" asp-route-id="@product.ProductId"><img src="@product.Image" alt=""></a>
						</div>
						<h3>@product.ProductName</h3>
						<p class="product-price"><span>Per Kg</span> @product.Price </p>
						<a asp-action="details" asp-controller="shop" asp-route-id="@product.ProductId"class="cart-btn">Product Details</a>
					</div>

				</div>
				   
			   }
				
			</div>

			@{
				var prev = !Model.PreviousPage ? "disabled" : "";
				var next = !Model.NextPage ? "disabled" : "";
			}

			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="pagination-wrap">
						<ul>
							<li><a asp-action="index" asp-route-pagenumber="@(Model.PageIndex-1)" class="btn btn-default @prev">Prev</a></li>
							<li><a asp-action="index" asp-route-pagenumber="@(Model.PageIndex+1)" class="btn btn-default @next">next</a></li>
				
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
